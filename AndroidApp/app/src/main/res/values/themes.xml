<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JustoChallenge" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TextTitle" parent="ThemeOverlay.AppCompat">
        <item name="android:fontFamily">
            @font/merriweather_black
        </item>
        <item name="android:textColor">
            @color/black
        </item>
        <item name="android:textSize">
            24sp
        </item>
    </style>
    <style name="TextBody" parent="ThemeOverlay.AppCompat">
        <item name="android:fontFamily">
            @font/opensans_medium
        </item>
        <item name="android:textColor">
            @color/black
        </item>
        <item name="android:textSize">
            14sp
        </item>
        <item name="android:justificationMode">
            inter_word
        </item>
    </style>
    <style name="TextBodyTitle" parent="ThemeOverlay.AppCompat">
        <item name="android:fontFamily">
            @font/merriweather_bold
        </item>
        <item name="android:textColor">
            @color/black
        </item>
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:justificationMode">
            inter_word
        </item>
    </style>
    <style name="Button.Black" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">@color/black</item>
    </style>
</resources>